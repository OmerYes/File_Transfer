
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <title>Kapital Medya File Share</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/Bootstrap-3.3.css" rel="stylesheet" />

    <!-- Custom Theme files -->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

</head>
<body>

    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1>File Upload</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span class="fa fa-eercast"></span>
                </div>
                <div class="header-left-bottom">
                    <form @*action="Home/test"*@ method="post" enctype="multipart/form-data">
                        <div class="icon1">
                            <span class="fa fa-envelope" style="position:absolute"></span>
                            <input type="email" placeholder="Alıcı Email Adresi" style="padding-left:20px" />
                        </div>
                        <div class="icon1">
                            <span class="fa fa-envelope" style="position:absolute"></span>
                            <input type="email" placeholder="Email Adresiniz" style="padding-left:20px" />
                        </div>

                       
                            <div class="files" id="files1">

                                <span class="btn btn-default btn-file">
                                    Dosya Seç  <input type="file" name="files1" multiple />
                                </span>
                                <br />
                                <ul class="fileList"></ul>
                            </div>
                     

                        <div class="bottom">
                            
                            <button id="uploadBtn" class="btn">Paylaş</button>
                        </div>

                    </form>
                </div>

            </div>

            <!-- copyright -->
            <div class="copyright">
                <p>© 2020 Fİle Transfer Form . All rights reserved | Design by <a href="http://w3layouts.com/" target="_blank">Kapital</a></p>
            </div>
            <!-- //copyright -->
        </div>
    </div>
    <!-- //main -->

</body>
</html>
<script src="~/js/jqurey.3.5.1.js"></script>
<script src="~/js/js_custom.js"></script>

